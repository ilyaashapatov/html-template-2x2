{{! Sprites }}
//!  generated automatically!

//!  use:
//!    1. s-home()
//!    2. s-home(r) - resize
//!    3. s-home(p) - change of background position
//!    4. s-home(!important), {{prefix}}-home(r, !important)


{{#if retina_spritesheet}}
retina = true
{{else}}
retina = false
{{/if}}

sprite-retina-mixin()
  if retina
    @media $m-retina
      background-size {{retina_spritesheet.px.width}} {{retina_spritesheet.px.height}}
      background-image url('{{retina_spritesheet.escaped_image}}')

{{#each sprites}}
{{prefix}}{{name}}(arg = null, arg2 = null)
  if arg and arg2
    if arg2 == !important or arg2 == important
      importance = !important
  else if arg == !important or arg == important
      importance = !important
  if p in arg or r in arg
    background-position {{px.offset_x}} {{px.offset_y}} importance
    if r in arg
      width {{px.width}} importance
      height {{px.height}} importance
  else
    display inline-block importance
    background url('{{{escaped_image}}}') no-repeat {{px.offset_x}} {{px.offset_y}} importance
    width width importance
    height height importance
    sprite-retina-mixin()

{{/each}}