{{#items}}
s-{{name}}(arg = null, arg2 = null)
  importance = unquote("")
  offset_x = {{px.offset_x}}
  offset_y = {{px.offset_y}}
  width = {{px.width}}
  height = {{px.height}}
  retina = {{retina}}

  if retina
    offset_x = {{px.offset_x}} / 2
    offset_y = {{px.offset_y}} / 2
    width = width / 2
    height = height / 2

  if arg and arg2
    if arg2 == !important or arg2 == important
      importance = !important
  else if arg == !important or arg == important
      importance = !important
  if p in arg or r in arg
    background-position: offset_x offset_y importance
    if r in arg
      width: width importance
      height: height importance
  else
    display: inline-block importance
    background: url('../images/sprite.png') no-repeat offset_x offset_y importance
    width: width importance
    height: height importance

    if retina
      @media $m-retina
        background-size: ({{px.total_width}} / 2) ({{px.total_height}} / 2)
        background-image: url('../images/sprite@2x.png')

{{/items}}