* {
  box-sizing border-box
}

*:before,
*:after {
  box-sizing border-box
}

html {
  position relative
  min-height 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
}

body {
  margin-bottom 60px
  font normal $font-size-base/$line-height-base $font-family-base
  background $background-body
  color $text-color
}

::selection {
  background #0784ad
  color #fff
}

::-moz-selection {
  background #0784ad
  color #fff
}

a {
  color $link-color
}

// footer
.footer {
  position absolute
  left 0
  bottom 0
  width 100%
  height 60px
  background #ddd
}