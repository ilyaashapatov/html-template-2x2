body {
  font normal $font-size-body/$line-height-body $font-body
  background $background-body
  color $text-color
}

::selection {
  background $selection-color-bg
  color $selection-color
}

::-moz-selection {
  background $selection-color-bg
  color $selection-color
}

a {
  color $link-color
}


//$page
.page {
  position relative
  margin 0 auto
  min-height 100%
  *zoom 1
}


.page:before,
.page:after {
  display table
  content ""
}

.page:after {
  clear both
}


//$container
.container {
  position relative
  margin 0 auto 140px

  clearfix()
}

.constrain {
  margin 0 auto
  padding 0 20px
  max-width 960px
}