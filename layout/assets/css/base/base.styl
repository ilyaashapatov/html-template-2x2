
* {
  box-sizing border-box
}

*:before,
*:after {
  box-sizing border-box
}

html {
  position relative
  min-height 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
}


body {
  margin-bottom 60px
  font normal $font-size-base/$line-height-base $font-family-base
  background $background-body
  color $text-color
}

::selection {
  background $selection-color-bg
  color $selection-color
}

::-moz-selection {
  background $selection-color-bg
  color $selection-color
}

a {
  color $link-color
}


//$page
.page {
  position relative
  margin 0 auto
  min-height 100%
  *zoom 1
}


.page:before,
.page:after {
  display table
  content ""
}

.page:after {
  clear both
}

// footer
.footer {
  position absolute
  left 0
  bottom 0
  width 100%
  height 60px
  background #ddd
}